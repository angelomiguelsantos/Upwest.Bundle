<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <upwestbundleContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\upwest.bundle\**\*.*</upwestbundleContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyupwestbundleAssets" BeforeTargets="Build">
        <ItemGroup>
            <upwestbundleContentFiles Include="$(upwestbundleContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying upwest.bundle files: $(upwestbundleContentFilesPath) - #@(upwestbundleContentFiles->Count()) files"  Importance="high" />
        <Copy SourceFiles="@(upwestbundleContentFiles)" DestinationFiles="@(upwestbundleContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\upwest.bundle\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
    </Target>

    <Target Name="ClearupwestbundleAssets" BeforeTargets="Clean">
        <ItemGroup>
            <upwestbundleDir Include="$(MSBuildProjectDirectory)\App_Plugins\upwest.bundle\" />
        </ItemGroup>
        <Message Text="Clear old upwest.bundle data"  Importance="high" />
        <RemoveDir Directories="@(upwestbundleDir)"  />
    </Target>

</Project>
